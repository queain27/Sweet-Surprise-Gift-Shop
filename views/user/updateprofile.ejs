<div class="container">
    <div class="view-account">
        <section class="module">
            <div class="module-inner">
  
                                               
                <div class="content-panel">
                    <form method="POST">  
                         
                        <center><a href="#"><img src="user/img/myprofile.PNG" width="1100" ></center></a><br><br>

                                <label>USERNAME</label>
                                <input type="text" name="username" value="<%= data.username %>" placeholder="example00"  class="form-control" > 
                                
                                <label>NAME</label>
                                <input type="text" name="Fname" value="<%= data.Fname %>" placeholder="First name, Last name" class="form-control">
                              
                                <label>EMAIL</label>
                                <input type="email" name="email" value="<%= data.email%>" class="form-control" readonly>
                                
                                <label>PHONE NUMBER</label>
                                <input type="text" name="phoneNum" value="<%= data.phoneNum %>" placeholder="01-XXXXXXXX" class="form-control">

                                <label>PASSWORD </label>
                                <input type="text" name="password" value="<%= data.password%>" placeholder="Password" class="form-control">

                                <label>CONFIRM PASSWORD</label>
                                <input type="text" name="passwordConf" value="<%= data.passwordConf %>" placeholder="Confirm Password" class="form-control">
                         
                                <center><input type="submit" value="Update" class="btn btn-success"> </center>                     
                    </form>
                </div>
            </div>
        </section>
